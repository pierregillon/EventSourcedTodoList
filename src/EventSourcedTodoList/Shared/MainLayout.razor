@using EventSourcedTodoList.Pages
@inherits LayoutComponentBase
@inject IDialogService Dialog

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton
            Icon="@Icons.Material.Filled.Menu"
            Color="Color.Inherit"
            Edge="Edge.Start"
            OnClick="@(e => DrawerToggle())"/>
        Mes tâches
        <MudIconButton
            Icon="@Icons.Material.Filled.Bolt"
            OnClick="@(e => OpenDialog())"
            Color="Color.Warning">
        </MudIconButton>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent MaxWidth="MaxWidth.Medium">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen;

    void DrawerToggle() => _drawerOpen = !_drawerOpen;

    private void OpenDialog() => Dialog.Show<Wizard>("Préparation des tâches du jour", new DialogOptions { FullScreen = true, CloseButton = true });

}